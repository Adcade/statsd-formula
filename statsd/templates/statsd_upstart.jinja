# Statsd Upstart Script generated by Salt.
start on (local-filesystems
    and net-device-up IFACE!=lo)
stop on shutdown

respawn
respawn limit 15 5
oom never

pre-start script
  if [ {{ log_file }} -ne "/dev/null" ]; then
    rm -f {{ log_file }}
    touch {{ log_file }}
    chown {{ service_account }}:{{ service_account }} {{ log_file }}
  fi
end script

script
  exec su -s /bin/sh -c "{{ bin_path }} {{ config_path }}" {{ service_account }} > {{ log_file }} 2>&1
end script

post-stop script
end script
